{
  "devDependencies": {
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "execa": "^4.0.2",
    "grandstack": "^0.1.7",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0"
  },
  "scripts": {
    "seedDb": "export NODE_OPTIONS=--openssl-legacy-provider; node scripts/seed.js",
    "start": "export NODE_OPTIONS=--openssl-legacy-provider; node scripts/start-dev.js",
    "build": "export NODE_OPTIONS=--openssl-legacy-provider; node scripts/build.js",
    "format": "find . -name \"*.js\" | grep -v node_modules | grep -v build | xargs prettier --write",
    "format:log": "find . -name \"*.js\" | grep -v node_modules | grep -v build | xargs prettier",
    "inferschema:write": "export NODE_OPTIONS=--openssl-legacy-provider; node scripts/inferSchema.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
